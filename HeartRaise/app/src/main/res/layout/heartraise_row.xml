<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/post_image"
            android:src="@drawable/add_img"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/post_title"
            android:padding="5dp"
            android:textStyle="bold"
            android:text="Post title goes here"
            android:textSize="16dp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="By"
            android:id="@+id/byId"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:layout_marginTop="5dp" />


            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/imageView"
                android:layout_toRightOf="@+id/byId"
                android:src="@drawable/profilepic"
                android:adjustViewBounds="true"
                android:background="#00ffffff"
                android:scaleType="centerCrop" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Username"
                android:id="@+id/post_username"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/imageView"
                android:layout_toEndOf="@+id/imageView"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="2dp" />


        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/post_story"
            android:padding="5dp"
            android:layout_marginBottom="10dp"
            android:text="Post story goes here" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


           <ImageButton
               android:layout_width="17dp"
               android:layout_height="17dp"
               android:src="@drawable/like"
               android:id="@+id/addLike_Button"
               android:adjustViewBounds="true"
               android:scaleType="fitCenter"
               android:background="#00ffffff"
               android:layout_marginLeft="15dp"
               android:layout_marginBottom="5dp"
               android:layout_marginTop="10dp" />

            <ImageButton
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:id="@+id/commentBtn"
                android:scaleType="fitCenter"
                android:src="@drawable/comments"
                android:layout_marginLeft="38dp"
                android:background="#00ffffff"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/addLike_Button"
                android:layout_toEndOf="@+id/addLike_Button"
                android:layout_marginTop="10dp" />

            <ImageButton
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:id="@+id/shareBtn"
                android:src="@drawable/ic_share"
                android:layout_marginLeft="38dp"
                android:scaleType="fitCenter"
                android:background="#00ffffff"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/commentBtn"
                android:layout_toEndOf="@+id/commentBtn"
                android:layout_marginTop="10dp"
                android:layout_marginRight="2dp" />

            <ImageButton
                android:layout_width="90dp"
                android:layout_height="28dp"
                android:id="@+id/donateBtn"
                android:src="@drawable/makeadifference"
                android:adjustViewBounds="true"
                android:background="#00ffffff"
                android:scaleType="centerCrop"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="3dp" />


        </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>